<%- include ('partials/_header.ejs')%>



<center>
    <img src="https://cdn.pixabay.com/photo/2017/03/13/23/31/icon-2141485_1280.png" width="200px" height="200px" class="img-fluid mt-4" alt="Responsive image">
<h1 class="mt-3 font">TASK MANAGER</h1>
</center>

<div class="container ">

    <div class="row">       
        <div class="col-md-8 offset-2 mb-5  bg-dark rounded" >
            <div class="card bg-dark">
                <div class="card-body bg-dark">
                    <form action="/add" method="POST">
                        <div class="form-group bg-dark">
                            <label class="text-light bg-secondary border-dark form-control" for="name">Task</label>
                            <input type="text" name="name" id="name "class="form-control" />
                        </div>
                        <div class="form-group bg-dark">
                            <label class="text-light bg-secondary border-dark form-control" for="last_name">Description</label>
                            <input type="text" name="last_name" id="last_name" class="form-control" />
                        </div>
                         <div class="form-group bg-dark">
                            <label class="text-light bg-secondary border-dark form-control" for="address">Date</label>
                            <input type="date" name="address" id="address " class="form-control" />
                        </div>                        
                        <button class="btn btn-primary  mt-3" type="submit">Add </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-10 offset-1 mt-8">
            <table class="table table-striped">
                <tr class="table-primary">
                    <th>#</th>
                    <th>Task </th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Actions</th>
                   </tr>
                <% for(let i=0; i<contacts.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= contacts[i].name %>
                        </td>
                        <td>
                            <%= contacts[i].last_name %>
                        </td>
                        <td>
                            <%= contacts[i].address %>
                        </td>
                                              
                        <td class="d-grid gap-1 d-md-block">
                            <a href="/change/<%=contacts[i]._id %>"
                                class="<%=contacts[i].status ? ' btn btn-success ' : ' btn btn-dark ' %>">
                                <%=contacts[i].status ? ' To do ' : ' Done ' %> </a>
                            <a href="/edit/<%=contacts[i]._id %>" class="btn btn-info">Edit</a>
                            <a href="/delete/<%=contacts[i]._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/_footer.ejs')%>